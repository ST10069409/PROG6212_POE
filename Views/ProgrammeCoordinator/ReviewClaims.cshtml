@model List<PROG6212_Part1.Models.Claim>

<style>
    /* Styling for the heading (h2) */
    h2 {
        background-color: #f7d7db; /* Light pink background */
        color: #2c3e50; /* Dark grey/blue font color */
        font-family: 'Georgia', serif; /* Elegant font for h2 */
        padding: 10px; /* Padding inside the heading */
        border-radius: 5px; /* Rounded corners */
        text-align: center; /* Center align the heading */
    }

    /* Styling for the table */
    table {
        width: 100%; /* Full width table */
        background-color: purple; /* Table background color */
        font-family: 'Verdana', sans-serif; /* Font for table content */
        color: #000; /* Black font color */
        border-collapse: collapse; /* Collapse table borders */
    }

    /* Styling for table headers and cells */
    th, td {
        border: 1px solid #ddd; /* Border around table cells */
        padding: 10px; /* Padding inside each cell */
        text-align: left; /* Left-align text */
    }

    /* Styling for table headers */
    th {
        background-color: #3498db; /* Blue background for table headers */
        color: white; /* White font for headers */
        font-family: 'Arial', sans-serif; /* Font for table headers */
    }

    /* Styling for even rows in the table */
    tr:nth-child(even) {
        background-color: #f2f2f2; /* Light grey background for even rows */
    }

    /* General button styling */
    .btn {
        font-family: 'Verdana', sans-serif; /* Font for buttons */
    }

    /* Styling for the 'Approve' button */
    .btn-success {
        background-color: #2ecc71; /* Green background for approve button */
        color: #fff; /* White text */
    }

    /* Styling for the 'Reject' button */
    .btn-danger {
        background-color: #e74c3c; /* Red background for reject button */
        color: #fff; /* White text */
    }
</style>

<h2>Review Claims</h2>
<table>
    <thead>
        <tr>
            <th>Claim ID</th>
            <th>Lecturer</th>
            <th>Hours Worked</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.ClaimId</td>
                <td>@claim.Lecturer</td>
                <td>@claim.HoursWorked</td>
                <td>@claim.Status</td>
                <td>
                    <form asp-action="ApproveClaim" method="post">
                        <input type="hidden" name="claimId" value="@claim.ClaimId" />
                        <button type="submit" @(claim.Status == "Pending" ? "" : "disabled")>Approve</button>
                    </form>
                    <form asp-action="RejectClaim" method="post">
                        <input type="hidden" name="claimId" value="@claim.ClaimId" />
                        <button type="submit" @(claim.Status == "Pending" ? "" : "disabled")>Reject</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>